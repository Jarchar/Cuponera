<mapper namespace="Usuario">
    <insert id="registroUsuario" parameterType="pojos.Usuario">
        INSERT INTO usuario (idUsuario,CorreoUsuario,UsuarioTelefono,UsuarioPass)
        VALUES(#{idusuario},#{telefono},#{correo},#{password})
    </insert>
    <select id="login" resultType="pojos.Usuario"
            parameterType="string">
        SELECT 
        Usuario.idUsuario,
        Usuario.UsuarioTelefono,
        Usuario.CorreoUsuario,
        Usuario.UsuarioPass
        FROM Usuario
        WHERE Usuario.UsuarioCorreo = #{correo} 
    </select>
</mapper>

